{
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.(js(doc|x)?|mjs)$",
        "excludePattern": "(node_modules/)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "readme": "./readme.md"
    }
}